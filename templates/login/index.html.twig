{% extends 'base.html.twig' %}
{% block body %}

{% if error %}
<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

    <body class="d-flex" style="background-image: url({{asset('images/azul.jpg')}});">

    <div class="container">
        <section id="content">
            <h1 class="center-align">Security Automatic GPS</h1>

            <h1 class="center-align">Iniciar sesión</h1>

            <div class="logo">
                <img class="responsive-img" src="{{asset('images/Logo1.jpeg')}}" alt="">
            </div>

            <form action="{{ path('app_login') }}" method="POST">
                <div class="input-group login-userinput">

                    <div class="input-field col s12 m12">
                        <i class="material-icons prefix">account_circle</i>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required>
                        <label for="username">Correo Electronico</label>
                    </div>


                    <div class="input-field col s12 m12">
                        <i class="material-icons prefix">https</i>
                        <input type="password" id="password" name="_password" required>
                        <label for="password">Contraseña</label>
                    </div>
                    <div>
                        <input type="hidden" name="_target_path" value="/mapa "/>
                        <div>
                            <input type="submit" value="Log in"/>
                            <a href="#">Lost your password?</a>
                            <a href="#">Register</a>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>


</body>
{% endblock %}